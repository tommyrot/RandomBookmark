{
  "manifest_version": 2,
  "name": "Random Bookmark",
  "version": "1.0",
  "description": "Open a random Bookmark.",
  "author": "tommyrot",
  "homepage_url": "https://github.com/tommyrot/randombookmark",
  "permissions": ["bookmarks", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": "icon.svg",
    "default_title": "Open Random Bookmark"
  },
  "icons": {
    "48": "icon.svg"
  }
}
